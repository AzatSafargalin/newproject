<?xml version="1.0" encoding="UTF-8"?>
<web-app
    version="3.1"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <security-constraint>
        <display-name>Tomcat Server Configuration Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>newproject</web-resource-name>
            <url-pattern>/web/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>newproject</realm-name>
    </login-config>
    <security-role>
        <description>anyrole</description>
        <role-name>*</role-name>
    </security-role>
    
    <resource-ref>
        <description>База проекта newproject</description>
        <res-ref-name>jdbc/.apps.newproject/.apps.newproject.db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    
    <resource-ref>
        <description>Тестовая дополнительная база данных</description>
        <res-ref-name>jdbc/.apps.newproject/.apps.test.db.ro</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    
    <!-- Глобальные переменные планировщиков -->
    <env-entry>
        <description>taskExecutor corePoolSize</description>
        <env-entry-name>corePoolSize</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>10</env-entry-value>
    </env-entry>
    <env-entry>
        <description>taskExecutor maxPoolSize</description>
        <env-entry-name>maxPoolSize</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>30</env-entry-value>
    </env-entry>
    <env-entry>
        <description>taskExecutor queueCapacity</description>
        <env-entry-name>queueCapacity</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>0</env-entry-value>
    </env-entry>
    
    <!-- Переменные планировщиков -->
    <env-entry>
        <description>Запуск по расписанию тестового планировщика (вкл/выкл)</description>
        <env-entry-name>apps.newproject.tasks.testtaskenabled</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>false</env-entry-value>
    </env-entry>

    <!-- Расписание задач -->
    <env-entry>
        <description>Расписание тестового планировщика</description>
        <env-entry-name>apps.newproject.tasks.testschedule</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <!-- Раз в 10 секунд -->
        <env-entry-value>0 */1 * * * *</env-entry-value>
    </env-entry>
</web-app>
